{
  "name": "lambda-node",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:index": "esbuild --bundle index.ts --platform=node --format=cjs --minify --sourcemap --outdir=dist --out-extension:.js=.cjs",
    "build:lambda": "esbuild --bundle handler.ts --platform=node --format=cjs --minify --sourcemap --outdir=dist --out-extension:.js=.cjs",
    "zip:lambda": "zip -j lambda.zip dist/handler.cjs dist/handler.cjs.map"
  },
  "dependencies": {
    "axios": "^1.1.3"
  }
}
